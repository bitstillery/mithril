{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "bundler",
    "jsx": "react",
    "jsxFactory": "m",
    "jsxFragmentFactory": "m.fragment",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "jsx.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "**/*.js"
  ]
}